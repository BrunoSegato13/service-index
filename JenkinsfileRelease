#!groovy

node {

    load "$JENKINS_HOME/jobvars.env"

    dir('src/github.com/reportportal/service-index') {
        withEnv(["GOROOT=${root}", "GOPATH=${JENKINS_HOME}/jobs/${JOB_NAME}/builds/${BUILD_ID}/", "PATH+GO=${root}/bin"]) {
            stage('Checkout') {
                checkout scm
                sh 'git checkout master'
                sh 'git pull'
            }

            stage('Build') {
                sh 'make release'
            }

        }


    }
}

