#!groovy

node {

    load "$JENKINS_HOME/jobvars.env"

    dir('src/github.com/reportportal/service-index') {
        withEnv(["GOPATH=${JENKINS_HOME}/workspace/${JOB_NAME}/", "PATH+GO=${GOROOT}/bin"]) {
            env.PATH="${GOPATH}/bin:$PATH"

            stage('Checkout') {
                checkout scm
                sh 'git checkout master'
                sh 'git pull'
            }

            stage('Build') {
                sh 'make release'
            }

        }


    }
}

