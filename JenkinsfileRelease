#!groovy

node {

       load "$JENKINS_HOME/jobvars.env"

       dir('src/github.com/reportportal/service-index') {

           stage('Checkout'){
                checkout scm
                sh 'git checkout master'
                sh 'git pull'
            }

            stage('Build') {
                 // Export environment variables pointing to the directory where Go was installed
                 docker.image('golang:1.8.3').inside("-u root -e GOPATH=${env.WORKSPACE} -e BINTRAY_TOKEN=${env.BINTRAY_TOKEN}")  {
                        sh 'PATH=$PATH:$GOPATH/bin && make release'
                 }
            }



        }
}

